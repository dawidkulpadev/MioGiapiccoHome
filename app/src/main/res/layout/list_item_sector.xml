<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sector_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/sector_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="NAME"
        app:layout_constraintStart_toEndOf="@id/sector_id_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sector_plants_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLANTS"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sector_id_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sector_plants_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sector_plants_label"/>

    <TextView
        android:id="@+id/sector_lds_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIGHT DEVICES"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sector_plants_list"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sector_lds_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sector_lds_label" />

    <TextView
        android:id="@+id/sector_ads_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AIR DEVICES"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sector_lds_list"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/air_devices_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sector_ads_label" />


</androidx.constraintlayout.widget.ConstraintLayout>