<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/air_params_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/air_params_box_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_air_data"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/control_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@id/air_params_box_title"
            android:layout_marginTop="12dp">
            <Button
                style="?attr/materialIconButtonOutlinedStyle"
                android:id="@+id/prev_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/button_previous"
                app:icon="@drawable/icon_arrow_left"
                android:layout_marginStart="20dp"/>
            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/title_today"
                app:layout_constraintStart_toEndOf="@id/prev_btn"
                app:layout_constraintEnd_toStartOf="@id/next_btn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <Button
                style="?attr/materialIconButtonOutlinedStyle"
                android:id="@+id/next_btn"
                android:contentDescription="@string/button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/icon_arrow_right"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/adh_periods_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/control_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="6dp"
            app:singleSelection="true"
            app:selectionRequired="true">
            <com.google.android.material.chip.Chip
                android:id="@+id/adh_period_day_chip"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chip_period_day"
                android:textSize="11sp"
                android:checked="true"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/adh_period_3days_chip"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chip_period_3days"
                android:textSize="11sp"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/adh_period_month_chip"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="@string/chip_period_month"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/adh_period_3months_chip"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="@string/chip_period_3months"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/adh_period_year_chip"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:text="@string/chip_period_year"/>
        </com.google.android.material.chip.ChipGroup>

        <ProgressBar
            android:id="@+id/chart_data_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/chart"
            app:layout_constraintBottom_toBottomOf="@id/chart"
            app:layout_constraintStart_toStartOf="@id/chart"
            app:layout_constraintEnd_toEndOf="@id/chart"
            android:visibility="gone"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:layout_constraintTop_toBottomOf="@id/adh_periods_group"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/air_device_params_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/chart"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="4dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="16dp">
            <TextView
                android:id="@+id/battery_level_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="15sp"
                android:text="@string/label_battery_level"/>

            <TextView
                android:id="@+id/battery_level_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/battery_level_label"
                app:layout_constraintBottom_toBottomOf="@id/battery_level_label"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@id/humidity_target_edit_button"
                android:text="@string/value_battery_voltage"/>

            <TextView
                android:id="@+id/humidity_target_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/battery_level_label"
                android:layout_marginTop="16dp"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Utrzymywany poziom wilgotnoÅ›ci:"/>

            <TextView
                android:id="@+id/humidity_target_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/humidity_target_label"
                app:layout_constraintBottom_toBottomOf="@id/humidity_target_label"
                app:layout_constraintEnd_toStartOf="@id/humidity_target_edit_button"
                android:textSize="15sp"
                android:text="@string/value_humidity_integer"/>
            <Button
                android:id="@+id/humidity_target_edit_button"
                style="?attr/materialIconButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/humidity_target_text"
                app:layout_constraintBottom_toBottomOf="@id/humidity_target_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:icon="@drawable/icon_edit"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/ad_bottom_divider"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/room_settingsbox_layout_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/air_params_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:visibility="gone">
        <include
            layout="@layout/pane_settings_room"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/room_settings_button"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/room_settingsbox_layout_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/button_room_settings"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        app:icon="@drawable/icon_settings"/>

</androidx.constraintlayout.widget.ConstraintLayout>