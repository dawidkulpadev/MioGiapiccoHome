<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/air_params_box"
    style="@style/Widget.Material3.BottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="24dp"
    android:paddingStart="24dp"
    android:paddingEnd="12dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/title_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@id/drag_handle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_settings"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:paddingBottom="12dp"
        style="@style/TextAppearance.Material3.HeadlineMedium"
        android:text="@string/example_title"/>


    <TextView
        android:id="@+id/hardware_version_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="24dp"
        android:text="@string/info_hardware_version"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/software_version_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hardware_version_text"
        app:layout_constraintStart_toStartOf="parent"
        android:minHeight="36dp">
        <TextView
            android:id="@+id/software_version_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/info_software_version"/>

        <Button
            style="@style/Widget.Material3.Button.TextButton"
            android:id="@+id/software_update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_update"
            app:icon="@drawable/icon_upgrade"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/device_name_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColorHint="@color/textSecondaryLight"
        app:layout_constraintTop_toBottomOf="@id/software_version_info_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/name_reset_button">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/device_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="text"
            android:hint="@string/hint_light_device_name"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/name_reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.IconButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/device_name_input_layout"
        app:layout_constraintBottom_toBottomOf="@id/device_name_input_layout"
        app:icon="@drawable/icon_reset"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/room_select_menu"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_room"
        android:textColorHint="@color/textSecondaryLight"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/room_reset_button"
        app:layout_constraintTop_toBottomOf="@id/device_name_input_layout">
        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/room_select_autocomplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/room_reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.IconButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/room_select_menu"
        app:layout_constraintBottom_toBottomOf="@id/room_select_menu"
        app:icon="@drawable/icon_reset"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sector_select_menu"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/hint_sector"
        android:textColorHint="@color/textSecondaryLight"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/room_select_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sector_reset_button">
        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/sector_select_autocomplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sector_reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.Material3.Button.IconButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/sector_select_menu"
        app:layout_constraintBottom_toBottomOf="@id/sector_select_menu"
        app:icon="@drawable/icon_reset"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/device_unregister_button"
        style="@style/Theme.MyApplication.UnsafeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sector_select_menu"
        android:text="@string/button_unbind"
        app:icon="@drawable/icon_remove"
        android:layout_marginTop="48dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>