<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/plant_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/plant_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/plant_id_text"
        android:layout_toStartOf="@id/plant_lastseen_text"
        android:text="NAME"/>

    <TextView
        android:id="@+id/plant_lastseen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="LAST SEEN"/>

    <TextView
        android:id="@+id/plant_soil_dev_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOIL DEV ID"
        android:layout_below="@id/plant_id_text"
        android:layout_marginEnd="16dp"/>
    <TextView
        android:id="@+id/plant_soil_dev_hum_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOIL DEV HUM"
        android:layout_below="@id/plant_id_text"
        android:layout_toEndOf="@id/plant_soil_dev_id_text"/>

</RelativeLayout>