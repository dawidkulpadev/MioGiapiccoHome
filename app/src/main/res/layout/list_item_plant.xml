<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="#EBF9EB">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">
            <TextView
                android:id="@+id/plant_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"/>

            <TextView
                android:id="@+id/plant_lastseen_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="LAST SEEN"/>

            <TextView
                android:id="@+id/plant_soil_dev_id_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOIL DEV ID"
                android:layout_below="@id/plant_name_text"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:id="@+id/plant_soil_dev_hum_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOIL DEV HUM"
                android:layout_below="@id/plant_name_text"
                android:layout_toEndOf="@id/plant_soil_dev_id_text"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
