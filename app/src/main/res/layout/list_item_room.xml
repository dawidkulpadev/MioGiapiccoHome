<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/room_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="ID"/>

    <TextView
        android:id="@+id/room_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/room_id_text"
        android:text="NAME"/>

    <TextView
        android:id="@+id/room_sectors_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SECTORS"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/room_id_text"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/room_sectors_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/room_sectors_label"/>

    <TextView
        android:id="@+id/room_ads_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SECTORS"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/room_sectors_list"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/room_ads_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/room_ads_label"/>

</androidx.constraintlayout.widget.ConstraintLayout>