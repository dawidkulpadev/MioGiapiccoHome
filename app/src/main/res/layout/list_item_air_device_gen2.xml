<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:strokeWidth="1dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iconAir"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_air"
            app:tint="?attr/colorOnSurfaceVariant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tvLastMeasurement" />

        <TextView
            android:id="@+id/tvAirTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Powietrze"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintStart_toEndOf="@+id/iconAir"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLastMeasurement"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:text="Ostatni pomiar: 11:54"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintStart_toEndOf="@+id/iconAir"
            app:layout_constraintTop_toBottomOf="@+id/tvAirTitle" />

        <LinearLayout
            android:id="@+id/layoutBattery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tvAirTitle">

            <TextView
                android:id="@+id/tvBatteryLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="85%"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <ImageView
                android:id="@+id/ivBattery"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/icon_battery_full"
                app:tint="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutParameters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLastMeasurement">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTemperature"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="24,1Â°C"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                app:chipIcon="@drawable/icon_thermometer_black"
                app:chipIconTint="?attr/colorOnSurfaceVariant" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHumidity"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35,4%"
                android:textAppearance="?attr/textAppearanceLabelLarge"
                app:chipIcon="@drawable/icon_water_drop"
                app:chipIconTint="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/air_chart_button"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:paddingHorizontal="12dp"
            android:text="Wykres"
            android:textColor="?attr/colorPrimary"
            app:icon="@drawable/icon_chart"
            app:iconTint="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/layoutParameters"
            app:layout_constraintBottom_toBottomOf="@+id/layoutParameters" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>