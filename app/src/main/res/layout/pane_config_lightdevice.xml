<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:id="@+id/ld_ds_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/simple_ripple"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="6dp">
        <ImageView
            android:id="@+id/ld_ds_icon"
            android:layout_width="@dimen/details_light_icon_size"
            android:layout_height="@dimen/details_light_icon_size"
            android:src="@drawable/sunrise"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/ld_ds_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/configs_light_font_size"
            android:text="12:00"
            android:layout_below="@id/ld_ds_icon"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ld_sre_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/simple_ripple"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/ld_ds_box"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="6dp">
        <ImageView
            android:id="@+id/ld_sre_icon"
            android:layout_width="@dimen/details_light_icon_size"
            android:layout_height="@dimen/details_light_icon_size"
            android:src="@drawable/sun"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/ld_sre_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/configs_light_font_size"
            android:text="13:00"
            android:layout_below="@id/ld_sre_icon"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/ld_dli_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:textSize="@dimen/configs_light_font_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ld_de_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/simple_ripple"
        android:padding="16dp"
        android:text="100%"/>

    <RelativeLayout
        android:id="@+id/ld_sss_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/simple_ripple"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@id/ld_de_box"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="6dp">
        <ImageView
            android:id="@+id/ld_sss_icon"
            android:layout_width="@dimen/details_light_icon_size"
            android:layout_height="@dimen/details_light_icon_size"
            android:src="@drawable/sunset"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/ld_sss_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/configs_light_font_size"
            android:text="20:00"
            android:layout_below="@id/ld_sss_icon"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ld_de_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/simple_ripple"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="6dp">
        <ImageView
            android:id="@+id/ld_de_icon"
            android:layout_width="@dimen/details_light_icon_size"
            android:layout_height="@dimen/details_light_icon_size"
            android:src="@drawable/moon"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/ld_de_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/configs_light_font_size"
            android:text="21:00"
            android:layout_below="@id/ld_de_icon"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ld_settingsbox_layout_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ld_de_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <include
            layout="@layout/pane_settings_lightdevice"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <Button
        android:id="@+id/ld_settings_button"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ld_settingsbox_layout_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/button_settings"
        android:textSize="12sp"
        app:icon="@drawable/icon_settings"/>

</androidx.constraintlayout.widget.ConstraintLayout>
