<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/device_loose_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loose device"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/device_loose_label">
    <TextView
        android:id="@+id/device_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/device_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_toEndOf="@id/device_id_text"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/device_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type"
        android:layout_toEndOf="@id/device_name_text"
        android:layout_marginEnd="16dp"/>
    </RelativeLayout>

</RelativeLayout>