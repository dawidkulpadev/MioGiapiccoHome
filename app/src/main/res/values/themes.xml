<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:colorBackground">#EEEEF4</item>

        <item name="colorSurface">#EEEEF4</item>

        <item name="colorOnContainer">#aaa</item>

        <item name="colorSurfaceContainerLow">#E8E8EE</item>
        <item name="colorSurfaceContainerHighest">#F1F1F5</item>

        <item name="colorPrimary">#00B790</item>
        <item name="colorOnPrimary">#E8E8E8</item>
        <item name="colorPrimaryContainer">#68C8B3</item>
        <item name="colorOnPrimaryContainer">#ffffff</item>

        <item name="colorSecondary">#098585</item>
        <item name="colorSecondaryContainer">#8AC2C2</item>
        <item name="colorOnSecondaryContainer">#22251F</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="Theme.MyApplication.UnsafeButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/unsafe_button_text_color_selector</item>
        <item name="iconTint">@color/unsafe_button_text_color_selector</item>
    </style>

    <style name="Theme.MyApplication.SpecialTextButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
    </style>

    <style name="Theme.MyApplication.MoreButton" parent="Widget.Material3.Button.IconButton">
        <item name="iconTint">?attr/colorOnSecondaryContainer</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />

    <style name="Theme.MyApplication.Background" parent="Theme.MyApplication">
        <item name="android:alpha">0.15</item>
    </style>

</resources>